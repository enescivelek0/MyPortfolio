@model Portfolio

@{
	ViewData["Title"] = "CreatePortfolio";
	Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Projelerim</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Proje Ekleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Kısa Açıklama</label>
							<input type="text" asp-for="SubTitle" class="form-control" />
							<br />
							<label>Açıklama</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br />
							<label>Resim</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br />
							<br />
							<button class="btn btn-primary">Proje Ekle</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>