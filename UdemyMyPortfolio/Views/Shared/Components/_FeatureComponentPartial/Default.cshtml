@model List<UdemyMyPortfolio.DAL.Entites.Feature>

<section id="home" class="s-home page-hero target-section" data-parallax="scroll"
         data-image-src="https://i.hizliresim.com/3nxx7ol.jpeg"
         data-natural-width=data-natural-height =data-position-y =center>

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    @foreach (var item in Model)
    {
        <div class="home-content">

            <div class="row home-content__main">

                <h3>Selam</h3>
                <h1>
                    @item.Title <br />
                    @item.Description 
                </h1>

                <div class="home-content__buttons">
                    <a href="#works" class="smoothscroll btn btn--stroke">
                        Son Projelerim
                    </a>
                    <a href="#about" class="smoothscroll btn btn--stroke">
                        Hakkımda
                    </a>
                </div>

                <div class="home-content__scroll">
                    <a href="#about" class="scroll-link smoothscroll">
                        <span>Aşağıya İn</span>
                    </a>
                </div>

            </div>

        </div>
    }
    <ul class="home-social">
        <li>
            <a href="https://www.linkedin.com/in/enescivelek0/"><i class="im im-linkedin" aria-hidden="true"></i><span>Linkedin</span></a>
        </li>
        <li>
            <a href="https://www.instagram.com/enssfnl/"><i class="im im-instagram" aria-hidden="true"></i><span>Instagram</span></a>
        </li>
        <li>
            <a href="https://github.com/enescivelek0"><i class="im im-github" aria-hidden="true"></i><span>GitHub</span></a>
        </li>

    </ul>
    <!-- end home-social -->

</section>